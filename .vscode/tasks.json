{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "PHPUnit: Run Tests",
            "type": "shell",
            "command": "C:\\xampp\\php\\php.exe",
            "args": [
                "C:\\xampp\\htdocs\\tercer_cielo\\vendor\\bin\\phpunit",
                "--colors=always",
                "--testdox",
                "${relativeFile}"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": ["$php"],
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "powershell.exe",
                    "args": ["-NoProfile", "-ExecutionPolicy", "Bypass", "-Command"]
                }
            }
        },
        {
            "label": "PHPUnit: Run Single Test",
            "type": "shell",
            "command": "C:\\xampp\\php\\php.exe",
            "args": [
                "C:\\xampp\\htdocs\\tercer_cielo\\vendor\\bin\\phpunit",
                "--colors=always",
                "--testdox",
                "${file}"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$php"],
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "powershell.exe",
                    "args": ["-NoProfile", "-ExecutionPolicy", "Bypass", "-Command"]
                }
            }
        },
        {
            "label": "PHPUnit: Run All Tests",
            "type": "shell",
            "command": "C:\\xampp\\php\\php.exe",
            "args": [
                "C:\\xampp\\htdocs\\tercer_cielo\\vendor\\bin\\phpunit",
                "--colors=always",
                "--testdox"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$php"],
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "powershell.exe",
                    "args": ["-NoProfile", "-ExecutionPolicy", "Bypass", "-Command"]
                }
            }
        },
        {
            "label": "PHPUnit: Run Specific Method",
            "type": "shell",
            "command": "C:\\xampp\\php\\php.exe",
            "args": [
                "C:\\xampp\\htdocs\\tercer_cielo\\vendor\\bin\\phpunit",
                "--colors=always",
                "--testdox",
                "--filter",
                "${input:testMethodName}",
                "${relativeFile}"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$php"],
            "options": {
                "cwd": "${workspaceFolder}",
                "shell": {
                    "executable": "powershell.exe",
                    "args": ["-NoProfile", "-ExecutionPolicy", "Bypass", "-Command"]
                }
            }
        }
    ],
    "inputs": [
        {
            "id": "testMethodName",
            "type": "promptString",
            "description": "Nombre del m√©todo de test a ejecutar (ej: testAgregarProducto)",
            "default": "test"
        }
    ]
}