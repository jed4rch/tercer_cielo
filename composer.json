{
    "require-dev": {
        "phpunit/phpunit": "10"
    },
    "require": {
        "stripe/stripe-php": "^18.1",
        "phpmailer/phpmailer": "^7.0",
        "tecnickcom/tcpdf": "^6.10"
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "test-dox": "phpunit --colors=always --testdox",
        "test-report": "phpunit --log-junit tests/reports/junit.xml --testdox-text tests/reports/testdox.txt",
        "test-html": "phpunit --testdox-html tests/reports/testdox.html && start tests/reports/testdox.html",
        "coverage": "phpunit --coverage-html tests/reports/coverage --coverage-text",
        "coverage-open": "phpunit --coverage-html tests/reports/coverage && start tests/reports/coverage/index.html",
        "dashboard": "start tests/reports/dashboard.html",
        "test-full": "phpunit --coverage-html tests/reports/coverage --testdox-html tests/reports/testdox.html --log-junit tests/reports/junit.xml && start tests/reports/dashboard.html"
    }
}
